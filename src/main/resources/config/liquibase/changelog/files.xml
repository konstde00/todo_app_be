<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="create-files-table" author="konstde00">

        <createTable tableName="files">

            <column name="id" type="bigint" autoIncrement="true" >
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="origin" type="VARCHAR(100)"/>

            <column name="url" type="VARCHAR(100)"/>

            <column name="bucket_name" type="VARCHAR(63)"/>

            <column name="file_key" type="VARCHAR(255)"/>

            <column name="content_type" type="VARCHAR(129)"/>

            <column name="metadata" type="JSON"/>

            <column name="created_at" type="timestamp" />

        </createTable>

        <addForeignKeyConstraint baseColumnNames="file_id"
                                 baseTableName="users"
                                 constraintName="fk_users_files"
                                 referencedColumnNames="id"
                                 referencedTableName="files"/>

    </changeSet>

</databaseChangeLog>